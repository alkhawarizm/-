الرزمة	الخوارزم

استعمل 			الخوارزم.نظام.ملف
استعمل 			الخوارزم.وسائط.شاشة

الصنف  امثلة_ملف  {	
						
	دالة  ملفات_قراءة_من_ملف() {
		
			المتغير م ملف::ملف
			المتغير جملة [500] حرف
			
			م	:=		م.افتح(  ".\مكتبة\كتاب.كتب"،"ق")	
			
			مادام ليس م.نهاية() {
					
			 ملف::اقرا_جملة(جملة كما   ۢ حرف ، 500، م )	
			
				اذا جملة ليس= عدم {
					
					شاشة::اكتب(جملة)
				}
			}
			
			م.اغلق()	
	}				

	دالة ملفات_كتابة_قراءة_في_ملف() {
		المتغير م ملف::ملف
		
			ملف::صناعة_دليل("مكتبة")	
			
		م	:=		م.افتح(  ".\مكتبة\كتاب.كتب"،"زإ")	

		ملف::اكتب(م،" الْحَمْدُ لِلَّهِ الَّذِي أَنزَلَ عَلَىٰ عَبْدِهِ الْكِتَابَ وَلَمْ يَجْعَل لَّهُ عِوَجًا ۜ  (1)/س")
		ملف::اكتب(م،" قَيِّمًا لِّيُنذِرَ بَأْسًا شَدِيدًا مِّن لَّدُنْهُ وَيُبَشِّرَ الْمُؤْمِنِينَ الَّذِينَ يَعْمَلُونَ الصَّالِحَاتِ أَنَّ لَهُمْ أَجْرًا حَسَنًا (2) /س")
		ملف::اكتب(م،" مَّاكِثِينَ فِيهِ أَبَدًا   (3)/س")				

		م.اغلق()	

	}

}
	   


					
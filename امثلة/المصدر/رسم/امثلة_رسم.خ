الرزمة	الخوارزم

استعمل 			الخوارزم.رسم.نافذة
استعمل 			الخوارزم.وسائط.شاشة
استعمل			 الخوارزم.تشكيلة.نصيات	
استعمل			 الخوارزم.نظام.ذاكرة
استعمل 			الخوارزم.نظام.تفاعل
استعمل			الخوارزم.رياضيات.ح64
استعمل			 الخوارزم.تشكيلة.أنموذج	

الصنف  امثلة_رسم  {	

	النوع احداثية شيء {
		ا حقيقي
		ب حقيقي
	}؛
	
الدالة مثال_رسم_منحنى_دالة() {
		
		المتغير  منحنى  أنموذج::قائمة!<احداثية>!
		المتغير  ف  أنموذج::قائمة!<احداثية>!			

		المتغير إ	 ، ب ۢ احداثية 
		المتغير ع حقيقي := -10.0
		المتغير  ا_اصغر ،  ا_اكبر، ب_اصغر ، 	 ب_اكبر حقيقي	
		المتغير  ا1 ، ب1، ا2 ، 	 ب2 حقيقي
		المتغير  ا1_ ، ب1_ ، ا2_ ، 	 ب2_ حقيقي		
		المتغير طول_الشاشة ، ارتفاع_الشاشة صحيح := 500، 500

		منحنى := منحنى.جديدة()
		
		نافذة::تهياة_الرسم("المنحنيات الرياضية"،طول_الشاشة،ارتفاع_الشاشة)

		ا_اصغر := ا_اكبر :=  ب_اصغر := ب_اكبر := 0.0

		كرر {
			إ :=		ذاكرة::تخصيص(حجم   ( ڨ إ))		كما  ۢ احداثية 
			إ->ا := ع	
			(۩	إ->ب := 	إ->ا.الظل()		۩)	
			(۩	إ->ب := 	إ->ا.جيب_التمام()				۩)											
			إ->ب := 	إ->ا.جيب()	
			منحنى.زد( ڨ إ)

			اذا 		إ->ا	 > 		ا_اكبر	 {
				ا_اكبر := إ->ا
			}
			اذا 		إ->ا	 < 		ا_اصغر	 {
				ا_اصغر := إ->ا
			}			
			اذا 		إ->ب	 > 		ا_اكبر	 {
				ا_اكبر := إ->ب
			}
			اذا 		إ->ب	 < 		ب_اصغر	 {
				ب_اصغر := إ->ب
			}										
			ع	+:= 0.1

		} 	مادام 	ع <  10.0

		ا1_ := 20.0 ، ب1_ := 20.0 ، ا2_  := (طول_الشاشة - 20 ) كما حقيقي ، 	 ب2_ :=	(طول_الشاشة \ 2 - 20 )	 كما حقيقي

		نافذة::لون_الخلفية (0، 0، 0، 255)	
		نافذة::لون(255، 255،  255، 255)

		نافذة::كتابة_خط("محور أ"،  طول_الشاشة - 50   ، ارتفاع_الشاشة  \ 2 ، 20 ،  طول_الشاشة ،  ارتفاع_الشاشة)		
		نافذة::كتابة_خط("محورب"،  طول_الشاشة \ 2  + 10  ، 10 ، 20 ،  طول_الشاشة ،  ارتفاع_الشاشة)				

		نافذة::خط(0، ارتفاع_الشاشة\2،طول_الشاشة،ارتفاع_الشاشة\2 )	
		نافذة::خط(طول_الشاشة\2، 0  ،طول_الشاشة\2، ارتفاع_الشاشة)			

		نافذة::لون(0، 255،  0، 255)			
	 
		ف := منحنى
		مادام 	 	ف->راس ليس= عدم و	 ف->راس->تالي ليس= عدم		{
			ب := ؏ ( ف->راس->قيمة  )	
								ا1 := ب->ا
								ب1 := ب->ب
								ف->راس := ف->راس->تالي	
								ب := 	؏ (	ف->راس->قيمة  )							
								ا2 :=ب->ا
								ب2 := ب->ب	
								ا1 := ا1_ + ((ا1 - ا_اصغر)\(ا_اكبر - ا_اصغر)) × (ا2_  - ا1_)
								ا2 := ا1_ + ((ا2 - ا_اصغر)\(ا_اكبر - ا_اصغر)) × (ا2_  - ا1_)			
								ب1 := ب1_ + ((ب1 - ب_اصغر)\(ب_اكبر - ب_اصغر)) × (ب2_  -ب1_)
								ب2 :=ب1_ + ((ب2 - ب_اصغر)\(ب_اكبر - ب_اصغر)) × (ب2_  - ب1_)			
								اكتب	(		ا1	) ؛ ':'.اكتب	() ؛ اكتب	( ب1	) ؛ ':'.اكتب	() ؛   اكتب	( ا2	)  ؛ ':'.اكتب	() ؛   اكتب	( ب2	)
								نافذة::خط(ا1		كما صحيح 	، ب1  	كما صحيح، ا2  	كما صحيح،ب2   	كما صحيح)		
		} 

		مادام تنفيذ  {
			نافذة::عرض()						
			تحديث()			

		} 


		منحنى.افرغ() 

							نافذة::نهاية()		

	}	

	 	

	(۩۩)
			دالة تحديث_المدخلات() 	منطقي	{
		المتغير حدث	تفاعل::حدث 
		المتغير	حالات  ۢصحيح8 طبيعي

		مادام 		تفاعل::استطلع_الاحداث(؏حدث)  = صواب {
			اذا  حدث.نوعه =  تفاعل::رقم_حدث_الخروج() {
				ارجع صواب
			}
		}
		ارجع خطا							
	}	


	المتغير تنفيذ منطقي := صواب


			المتغير مفتاح شيء {
		فوق،  اسفل، يسار، يمين ، ث، ز ، تحول، مساحة، رجوع، هروب	صحيح8 طبيعي
	}؛

	دالة تحديث()  	{
		اذا تحديث_المدخلات() او مفتاح.هروب ليس= 0ط8 {
			تنفيذ		:= خطا
		}	
	}	
	(۩۩			الاصــــــــــــــــــــــــــــــــــــــــــــــــــــــــل
 الدالة الاصل()	{
	 
		مثال_رسم_منحنى_دالة()
	}		۩۩)	
}




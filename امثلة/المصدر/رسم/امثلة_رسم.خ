الرزمة	الخوارزم


استعمل 			الخوارزم.رسم.نافذة
استعمل 			الخوارزم.وسائط.شاشة
استعمل			 الخوارزم.تشكيلة.نص	
استعمل			 الخوارزم.نظام.ذاكرة
استعمل 			الخوارزم.نظام.تفاعل
استعمل			الخوارزم.رياضيات.ح64
استعمل			 الخوارزم.تشكيلة.قائمة	

الصنف  امثلة_رسم  {	
	

	النوع احداثية شيء {
			ا حقيقي
			ب حقيقي
		}؛

		دالة مثال_رسم_منحنى_دالة() {

			
			المتغير  منحنى، ف قائمة::قائمة
			المتغير إ	 ، ب ۢ احداثية 
			المتغير ع حقيقي := -10.0
			المتغير  ا_اصغر ،  ا_اكبر، ب_اصغر ، 	 ب_اكبر حقيقي	
			المتغير  ا1 ، ب1، ا2 ، 	 ب2 حقيقي
			المتغير  ا1_ ، ب1_ ، ا2_ ، 	 ب2_ حقيقي		
			المتغير طول_الشاشة ، ارتفاع_الشاشة صحيح := 500، 500

			

			نافذة::تهياة_الرسم("المنحنيات الرياضية"،طول_الشاشة،ارتفاع_الشاشة)
			
			ا_اصغر := ا_اكبر :=  ب_اصغر := ب_اكبر := 0.0

			كرر {
				إ :=		ذاكرة::تخصيص(حجم   ( ڨ إ))		

						إ->ا := ع	

						(۩	إ->ب := 	إ->ا.الظل()		۩)	
						(۩	إ->ب := 	إ->ا.جيب_التمام()				۩)											
							إ->ب := 	إ->ا.الجيب()	

						منحنى := قائمة::اضف(منحنى،إ)
						اذا 		إ->ا	 > 		ا_اكبر	 {
					ا_اكبر := إ->ا
				}
				اذا 		إ->ا	 < 		ا_اصغر	 {
					ا_اصغر := إ->ا
				}			
				اذا 		إ->ب	 > 		ا_اكبر	 {
					ا_اكبر := إ->ب
				}
				اذا 		إ->ب	 < 		ب_اصغر	 {
					ب_اصغر := إ->ب
				}										
				ع	+:= 0.1

			} 	مادام 	ع <  10.0

			ا1_ := 20.0 ، ب1_ := 20.0 ، ا2_  := طول_الشاشة - 20، 	 ب2_ :=طول_الشاشة \ 2 - 20 	

			نافذة::لون_الخلفية (0، 0، 0، 255)	
			نافذة::لون(255، 255،  255، 255)
			
			(۩		نافذة::كتابة_خط("محور أ"،  طول_الشاشة - 40   ، ارتفاع_الشاشة  \ 2 ، 20 ،  طول_الشاشة ،  ارتفاع_الشاشة)			۩)		
			
			نافذة::خط(0، ارتفاع_الشاشة\2،طول_الشاشة،ارتفاع_الشاشة\2 )	
			نافذة::خط(طول_الشاشة\2، 0  ،طول_الشاشة\2، ارتفاع_الشاشة)			
			
			نافذة::لون(0، 255،  0، 255)			
			
			ف	:=قائمة::عكس(	منحنى)			
			مادام 		 ف ليس= عدم و ف->تالي 	ليس= عدم	{
				ب := ف->قيمة  	
						ا1 := ب->ا
						ب1 := ب->ب
						ف := ف->تالي	
						ب := ف->قيمة  							
						ا2 :=ب->ا
						ب2 := ب->ب	

						ا1 := ا1_ + ((ا1 - ا_اصغر)\(ا_اكبر - ا_اصغر)) × (ا2_  - ا1_)
						ا2 := ا1_ + ((ا2 - ا_اصغر)\(ا_اكبر - ا_اصغر)) × (ا2_  - ا1_)			
						ب1 := ب1_ + ((ب1 - ب_اصغر)\(ب_اكبر - ب_اصغر)) × (ب2_  -ب1_)
						ب2 :=ب1_ + ((ب2 - ب_اصغر)\(ب_اكبر - ب_اصغر)) × (ب2_  - ب1_)			

						نافذة::خط(ا1، ب1، ا2،ب2 )		
			}

					مادام تنفيذ  {
						نافذة::عرض()						
						تحديث()			
				(۩		نافذة::تأجيل(500)	۩)					

					}
					
			قائمة::تحرير(؏منحنى)	

					نافذة::نهاية()		

		}	
		
		دالة تحديث_القائمة( ق قائمة::قائمة ) {
			ق := عدم
		}		
		
	(۩۩)
	دالة تحديث_المدخلات() 	منطقي	{
		المتغير حدث	تفاعل::حدث 
		المتغير	حالات  ۢصحيح8 طبيعي

		مادام 		تفاعل::استطلع_الاحداث(؏حدث)  = صواب {
			اذا  حدث.نوعه =  تفاعل::رقم_حدث_الخروج() {
				ارجع صواب
			}
		}
		ارجع خطا							
	}	


	
	المتغير تنفيذ منطقي := صواب
			

	المتغير مفتاح شيء {
		فوق،  اسفل، يسار، يمين ، ث، ز ، تحول، مساحة، رجوع، هروب	صحيح8 طبيعي
	}؛

	
		دالة تحديث()  	{
										اذا تحديث_المدخلات() او مفتاح.هروب ليس= 0ط8 {
													تنفيذ		:= خطا
										}	
		}	
								
}
	   


					
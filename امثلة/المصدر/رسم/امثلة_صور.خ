الرزمة	الخوارزم

استعمل الخوارزم.وسائط.شاشة؛
استعمل 			الخوارزم.نظام.تفاعل
استعمل		الخوارزم.رسم.نافذة

الصنف		امثلة_صور {



		

	الدالة تحديث_مدخلات_المفاتيح() 	منطقي	{
		المتغير حدث	تفاعل::حدث 
		المتغير	حالات  ۢصحيح8 طبيعي

		مادام 		تفاعل::استطلع_الاحداث(؏حدث)  = صواب {
			اذا  حدث.نوعه =  تفاعل::رقم_حدث_الخروج() {
				ارجع صواب
			}

			اذا  حدث.نوعه =  (تفاعل::رقم_زر_الناقر_تحث()  اواو تفاعل::رقم_حركة_الناقر())	{
				اذا   حدث.حدث_زر_النقر.زر = 1ط8 {
				} والا {
				}
				شاشة::اكتب("نقر الزر :  ")												
				شاشة::اكتب(حدث.حدث_زر_النقر.زر)
				شاشة::اكتب("/س")	
			}

			اذا  حدث.نوعه =  تفاعل::رقم_حركة_الناقر() {
							شاشة::اكتب(حدث.حدث_زر_النقر.احداثية_ا)
							شاشة::اكتب(" : ")
							شاشة::اكتب(حدث.حدث_زر_النقر.احداثية_ب)
							شاشة::اكتب("/س")		
						}			
		}
		ارجع خطا							
	}	

	المتغير تنفيذ منطقي := صواب

	 المتغير مفتاح شيء {
		فوق،  اسفل، يسار، يمين ، ث، ز ، تحول، مساحة، رجوع، هروب	صحيح8 طبيعي
	}؛

	الدالة  تحديث_مدخلات()  	{
		اذا تحديث_مدخلات_المفاتيح() او مفتاح.هروب ليس= 0ط8 {
			تنفيذ		:= خطا
		}	

	}	
	 
	المتغير		طول_النافذة صحيح جامد := 500
	المتغير		عرض_النافذة صحيح جامد := 500
	 
	 
	الدالة		مسح_النافذة	()		{
		نافذة::لون(0، 0، 0، 255)؛
		 نافذة::مستطيل_ملء(0، 0، طول_النافذة، عرض_النافذة)؛		
	}	

	الدالة		اكتب_عنوان		(	عنوان ۢ حرف		،احداثية_ا صحيح ، 		احداثية_ب  صحيح) {
			 نافذة::لون		(	255,255,255, 255	)			
			 نافذة::كتابة_خط		(	عنوان ، 	احداثية_ا، احداثية_ب ، 20 ، طول_النافذة، عرض_النافذة				) 
	}	

	المتغير			مسار_اهليلج 	[][2] 		صحيح 	:=		[[100, 250], [250, 150],[400, 250], [250, 350] ]

																						  
	الدالة 	رسم() 		 		{

	 ليكن 		ا 		صحيح   := 0 
	 								
				 	تهياة_الرسم		(	"امثلة صور"		،		طول_النافذة،  عرض_النافذة	)

			(۩		حلقة التنفيذ	۩)		
			مادام تنفيذ  {
						مسح_النافذة	()			
					اظهر_صورة	(	  "صور\فضاء.صورة" ، 0 ،  0  ، طول_النافذة  ، عرض_النافذة)								
						اظهر_صورة	(	  "صور\ارض.صورة" ، طول_النافذة	  \ 2 - 50 ، عرض_النافذة   \ 2  - 50  ، 100  ، 100)	
					 
						 	اظهر_صورة	(	  "صور\قمر.صورة" ،     مسار_اهليلج[ا][0]  ،مسار_اهليلج[ا][1]  ،  30  ، 30)	 
							اكتب	(	  مسار_اهليلج[ا][0]	)		؛ ':'.اكتب	()		
							اكتب	(	  مسار_اهليلج[ا][1]	)		؛ '/س'.اكتب	()									
							ا++
							 	نافذة::تأجيل(1000)	 		
						اذا ا >= 4 {
								 	ا := 0							
						 }		
					  نافذة::عرض()		
						تحديث_مدخلات()						
				 } 
		 			نافذة::نهاية() 
	}



(۩
الدالة الاصل()  		{
	  	رسم()   
}
۩)

}
الرزمة	الخوارزم

استعمل الخوارزم.وسائط.شاشة؛
استعمل 			الخوارزم.نظام.تفاعل
استعمل		الخوارزم.رسم.نافذة

الصنف		امثلة_اوليات_رسم {
	

		دالة تحديث_المدخلات() 	منطقي	{
	المتغير حدث	تفاعل::حدث 
	المتغير	حالات  ۢصحيح8 طبيعي

	مادام 		تفاعل::استطلع_الاحداث(؏حدث)  = صواب {
		اذا  حدث.نوعه =  تفاعل::رقم_حدث_الخروج() {
			ارجع صواب
		}
	}
	ارجع خطا							
}	

المتغير تنفيذ منطقي := صواب

 المتغير مفتاح شيء {
	فوق،  اسفل، يسار، يمين ، ث، ز ، تحول، مساحة، رجوع، هروب	صحيح8 طبيعي
}؛

الدالة  قراءة_المفاتيح()  	{
	اذا تحديث_المدخلات() او مفتاح.هروب ليس= 0ط8 {
		تنفيذ		:= خطا
	}	

}	

 
المتغير		طول_النافذة صحيح جامد := 500
المتغير		عرض_النافذة صحيح جامد := 500

الدالة 		رسم_خطوط	(		)	{

	المتغير	ا ،  ب، حجم_الخط  صحيح := 0، 50	، 10
	مادام 	 ب < عرض_النافذة {
			نافذة::لون		(	 ا  - 200 ، ا + ب  ،  حجم_الخط  , حجم_الخط	)	 		
			نافذة::كتابة_خط		(	"سبحان الله والحمد لله" ، ا، ب ، حجم_الخط ، طول_النافذة، عرض_النافذة				)
 			 ب  +:= حجم_الخط		  ؛	 حجم_الخط +:= 11  ؛ 
	}	
}		
 
الدالة		مسح_النافذة	()		{
	نافذة::لون(0، 0، 0، 255)؛
	 نافذة::مستطيل_ملء(0، 0، طول_النافذة، عرض_النافذة)؛		
}	

الدالة		اكتب_عنوان		(	عنوان ۢ حرف		،احداثية_ا صحيح ، 		احداثية_ب  صحيح) {
		 نافذة::لون		(	255,255,255, 255	)			
		 نافذة::كتابة_خط		(	عنوان ، 	احداثية_ا، احداثية_ب ، 20 ، طول_النافذة، عرض_النافذة				) 
}	

الدالة 	رسم() 		 		{

 						ليكن 		مركز_احداثية 		صحيح جامد := 100 
 								
					  المتغير		احداثيات_مضلع 	[][2] 	صحيح 	:= [[   300، 100]، [    320  ،  110] ، [      320 ، 130]  /
																		، [  300	،  140]،[  280 ، 130]، [  280 ،  110]، [   300، 100]]  
					 	المتغير		احداثيات_نقط 	[][2] 	صحيح 	:= [[ 110 ،  110]، [  210 ، 250 ] ، [310، 350 ]، [510، 450]]														

			 	تهياة_الرسم		(	"امثلة للرسم"		،		طول_النافذة،  عرض_النافذة	)

				
		مادام تنفيذ  {
					
			امثلة_اوليات_رسم::قراءة_المفاتيح()	
				(۩		كتابة 	۩)
			(۩	رسم_خطوط	( )
				
				  نافذة::عرض()		
				نافذة::تأجيل(1000)	
				 مسح_النافذة	()
۩)
			 (۩		رسم دوائر	۩)					
				 نافذة::لون		(	0,200,255, 255	)									
				نافذة::دائرة		(	50، 70 ، 50	)	 
				نافذة::دائرة_ملئة		(	100، 70 ، 50	)  
				 اكتب_عنوان		("دائرة" ، 	50، 70	)
				 
			 (۩		رسم خط	۩)				 
				نافذة::خط		(	200، 400 ، طول_النافذة	، عرض_النافذة)	 
				 اكتب_عنوان		("خط" ، 200، 400	)
				 
				 (۩		رسم مثلثات	۩)					 
				نافذة::لون		(	0,200,34, 255	)					
				نافذة::مثلث 		(	50، 250 ،  100	، 350 ،50	، 450)	 
				نافذة::مثلث_ملئ		(	50، 230 ،  80	، 330 ،30	، 430)	 
				 اكتب_عنوان		("مثلث" ، 50، 230	)				 

				 (۩		رسم اهليلج	۩)								 
				نافذة::لون		(	10,250,200, 255	)							
				نافذة::اهليلج			 	(	200، 250 ، 70	 ، 45)			
				نافذة::اهليلج_ملئ			(	180، 250 ، 50	 ، 25) 
				 اكتب_عنوان		("اهليلج" ،	200، 250)					 
				 
				 (۩		رسم مضلع منتظم	۩)		
				 نافذة::لون		(	0,0,250, 255	)							 
				نافذة::مضلع_منتظم 		(	400، 300، 70، 6	)				
				نافذة::مضلع_منتظم_ملئ		(	400، 300، 50، 6	)	 
				 اكتب_عنوان		("مضلع منتظم" ،	400، 300)					 

				 (۩		رسم مضلع  	۩)						 
				نافذة::مضلع 		(	 احداثيات_مضلع	  ، 7	)	 	
				 اكتب_عنوان		("مضلع  " ،	 300، 100)	
				 
				 (۩		رسم نقط  	۩)				
				 نافذة::لون		(	255,255,255, 255	)								 
				نافذة::نقط 		(	 احداثيات_نقط	  ، 4	)
				 اكتب_عنوان		("نقط " ،	110 ،  110)					 
				نافذة::نقطة 		(	400، 300) ؛ 	نافذة::نقطة (	400، 310) ؛ 	نافذة::نقطة  (	400، 320) ؛ نافذة::نقطة (	400، 330) ؛
				
				
				 (۩		رسم بائن (بيكسل)  	۩)								
				نافذة::ضع_بائن 		(100، 60  ، 255، 0، 0 ،  255) ؛نافذة::ضع_بائن (	100، 70  ، 0،  255، 0 ،  255)	؛	 نافذة::ضع_بائن  (	100، 80  ،  0 ، 0،   255 ،  255) ؛

				 (۩		رسم جدول 3 × 3  	۩)					 				
				نافذة::جدول		(	100	 ،  400	 ، 	150	 ، 450 	 ، 3 ، 3)	
				 اكتب_عنوان		("جدول " ،	150	 ، 450)		
				 
				 
				 (۩		رسم مستطيل  	۩)					 				 
				مستطيل_ملء			(	200	 ،  20	 ، 30 	 ، 20 	 )	
				مستطيل 			(	200	 ،  20	 ، 50 	 ، 40 	 )				
				 اكتب_عنوان		("مستطيل " ،200	 ،  70)		
				 
				  نافذة::عرض()		
					مسح_النافذة	()	
				(۩	نافذة::تأجيل(1000)	۩)						
			 } 
					  
	 			نافذة::نهاية() 
}



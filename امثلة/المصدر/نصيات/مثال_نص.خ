الرزمة 		الخوارزم

استعمل الخوارزم.تشكيلة.نصيات
استعمل الخوارزم.وسائط.شاشة
استعمل الخوارزم.نظام.ذاكرة 

الصنف			امثلة_نصيات 	{


	الدالة			مثال_نصيات()		{

		المتغير		ن ، نص_نتيجة	نصيات::نص 

		(۩		شاشة::تعطيل_التخزين() ۩)  

		نص_نتيجة	:= 	 نصيات::جديد		(	"النصوص التي تحتوي على لفظ الجلالة : "	)			

		كرر 	{

			ن := نصيات::اقرا()	

			اذا          ن.طوله()	ليس= 0		 {
				شاشة::اكتب	("لقد كتبتم : ") ؛		اكتب	( "/""	)	؛  			 اكتب	(	ن	)	؛   اكتب	( "/"  /ج  طوله:"	)	؛ 	اكتب(	ن.طوله() ) ؛ '/س'.اكتب	()

										اذا 		ن.يتضمن("الله") 		{
					نص_نتيجة := 	نص_نتيجة.وصل(		ن	).وصل("/ج") 	
				}					
			}						


		} مادام    	ليس ن.يطابق	(	"محمد"	) 

		اكتب	(	نص_نتيجة	)
	}	

	(۩
			الدالة		الاصل		()		{

		مثال_نصيات()

	}	
	۩)


}
